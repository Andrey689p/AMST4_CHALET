@model AmsBooking.Models.Entities.Chalet

@{
ViewData["Title"] = "Create Chalet";
}

<h1>Create Chalet</h1>

<h4>Chalet</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddChalet" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label">Daily Rate</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageUrl1" class="control-label">Chalet Image 1</label>
                <input type="file" asp-for="ImageUrl1" class="form-control" />
                <span asp-validation-for="ImageUrl1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl2" class="control-label">Chalet Image 2</label>
                <input type="file" asp-for="ImageUrl2" class="form-control" />
                <span asp-validation-for="ImageUrl2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl3" class="control-label">Chalet Image 3</label>
                <input type="file" asp-for="ImageUrl3" class="form-control" />
                <span asp-validation-for="ImageUrl3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl4" class="control-label">Chalet Image 4</label>
                <input type="file" asp-for="ImageUrl4" class="form-control" />
                <span asp-validation-for="ImageUrl4" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quartos" class="control-label">Quartos</label>
                <input asp-for="Quartos" class="form-control" />
                <span asp-validation-for="Quartos" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Category"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacityId" class="control-label">Capacity</label>
                <select asp-for="CapacityId" class="form-control" asp-items="@ViewBag.Capacity"></select>
                <span asp-validation-for="CapacityId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="ChaletList">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
