@model IEnumerable<AmsBooking.Models.Entities.Booking>

@{
    ViewData["Title"] = "Lista de Hospedagem";
}

<h1>Lista de Hospedagem</h1>

<p>
</p>
<table id="myTable" class="table">
    <thead>
        <tr>
            <th>
                Chalé
            </th>
            <th>
                Data de Início
            </th>
            <th>
                Data de Término
            </th>
            <th>
                Preço Total
            </th>
            <th>
                Data de Agendamento
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <img src="~/@item.Chalet.ImageUrl3" style="width: 50px; height: 50px"/>
            </td>
            <td class="mt-5">
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script>
        var table = new DataTable('#myTable', {
            language: {
                url: '//cdn.datatables.net/plug-ins/2.0.7/i18n/pt-BR.json',
            },
        });
    </script>

}
